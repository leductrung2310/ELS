<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/smallCardCornerRadius"
        app:cardElevation="@dimen/_4sdp"
        android:layout_margin="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/meeting_room_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                android:background="@color/secondary_color_1"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_52sdp"
                app:cardCornerRadius="@dimen/_200sdp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/dark" />
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/meeting_room_button"
                style="@style/Meeting_room_title"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="Join"
                android:textAlignment="center"
                android:textSize="@dimen/_10sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/_5sdp"
                app:cornerRadius="@dimen/mediumCardCornerRadius" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
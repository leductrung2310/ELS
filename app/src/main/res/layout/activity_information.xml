<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical"
    tools:context=".InformationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/personal_layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/personal_edit_info_back"
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            android:layout_margin="@dimen/smallPadding"
            android:backgroundTint="@color/s_light"
            android:gravity="center"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="@dimen/smallCardCornerRadius"
            app:icon="@drawable/ic_arrow_back"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="@dimen/mediumIconSize"
            app:iconTint="@color/primary_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/largePadding"
            android:text="@string/edit_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/personal_background"
        android:orientation="vertical">

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/mediumPadding"
                app:civ_border_color="@color/primary_color"
                app:civ_border_width="@dimen/_2sdp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/mediumPadding"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_25sdp"
                android:src="@drawable/ic_personal_edit" />

        </FrameLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mediumPadding"
            android:layout_marginVertical="@dimen/smallPadding"
            app:boxCornerRadiusBottomEnd="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusBottomStart="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusTopEnd="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusTopStart="@dimen/smallCardCornerRadius"
            app:boxStrokeColor="@color/primary_color"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/primary_color">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:drawableStart="@drawable/ic_personal_name"
                android:drawablePadding="10sp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Name"
                android:lines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mediumPadding"
            android:layout_marginVertical="@dimen/smallPadding"
            app:boxCornerRadiusBottomEnd="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusBottomStart="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusTopEnd="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusTopStart="@dimen/smallCardCornerRadius"
            app:boxStrokeColor="@color/primary_color"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/primary_color">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:drawableStart="@drawable/ic_personal_email"
                android:drawablePadding="10sp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Email"
                android:lines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mediumPadding"
            android:layout_marginVertical="@dimen/smallPadding"
            app:boxCornerRadiusBottomEnd="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusBottomStart="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusTopEnd="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusTopStart="@dimen/smallCardCornerRadius"
            app:boxStrokeColor="@color/primary_color"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/primary_color">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:drawableStart="@drawable/ic_personal_phone"
                android:drawablePadding="10sp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Phone"
                android:lines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mediumPadding"
            android:layout_marginVertical="@dimen/smallPadding"
            app:boxCornerRadiusBottomEnd="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusBottomStart="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusTopEnd="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusTopStart="@dimen/smallCardCornerRadius"
            app:boxStrokeColor="@color/primary_color"
            app:endIconMode="clear_text"
            app:hintTextColor="@color/primary_color">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:drawableStart="@drawable/ic_personal_password"
                android:drawablePadding="10sp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Password"
                android:lines="1"
                android:drawableEnd="@drawable/personal_password_check_visible_1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mediumPadding"
            android:layout_marginVertical="@dimen/smallPadding"
            app:boxCornerRadiusBottomEnd="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusBottomStart="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusTopEnd="@dimen/smallCardCornerRadius"
            app:boxCornerRadiusTopStart="@dimen/smallCardCornerRadius"
            app:boxStrokeColor="@color/primary_color"
            app:hintTextColor="@color/primary_color">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:drawableStart="@drawable/ic_personal_password"
                android:drawablePadding="10sp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Repeat Password"
                android:lines="1"
                android:drawableEnd="@drawable/personal_password_check_visible_2"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginHorizontal="@dimen/mediumPadding"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textSize="@dimen/header3"
            android:textStyle="bold"
            app:cornerRadius="@dimen/smallCardCornerRadius"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
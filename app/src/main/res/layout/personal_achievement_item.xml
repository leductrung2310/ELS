<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <com.qhutch.elevationimageview.ElevationImageView
        android:id="@+id/personal_achievement_item_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="@dimen/_10sdp"
        android:src="@drawable/gamipress_icon_add"
        app:isTranslucent="true" />

    <TextView
        android:id="@+id/personal_achievement_item_textview"
        style="@style/Personal_achievement"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Hello"
        android:layout_gravity="center"/>
</LinearLayout>
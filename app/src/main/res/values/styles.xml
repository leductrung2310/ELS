<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text style -->
    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontStyle">italic</item>
    </style>

    <style name="skip_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">#7D73C3</item>
    </style>

    <style name="text_tab_layout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Custom card background for home fragment-->
    <style name="CustomCardViewStyleTopRadius" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_top_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_top_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/largeCardCornerRadius</item>
        <item name="cornerSizeTopLeft">@dimen/largeCardCornerRadius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomCardViewStyleBottomRadius" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_bottom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_bottom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/largeCardCornerRadius</item>
        <item name="cornerSizeBottomLeft">@dimen/largeCardCornerRadius</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text style -->
    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontStyle">italic</item>
    </style>

    <style name="skip_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">#7D73C3</item>
    </style>

    <style name="text_tab_layout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Custom card background for home fragment-->
    <style name="CustomCardViewStyleTopRadius" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_top_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_top_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/largeCardCornerRadius</item>
        <item name="cornerSizeTopLeft">@dimen/largeCardCornerRadius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomCardViewStyleBottomRadius" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_bottom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_bottom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/largeCardCornerRadius</item>
        <item name="cornerSizeBottomLeft">@dimen/largeCardCornerRadius</item>
    </style>

    <style name="Personal_card_header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Personal_card_body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_card_tab" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Personal_name" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/header3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Activity_name" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_info_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_info_content" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/bodyText2</item>
    </style>

    <style name="Personal_setting_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/header3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_edit_info_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/header3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_edit_info_content" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Personal_edit_info_content_gender" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Personal_edit_info_radio_button" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:background">@drawable/personal_radio_button_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/personal_radio_button_text_color</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">normal</item>'
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/smallPadding</item>
    </style>

    <style name="Personal_back_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:layout_margin">@dimen/smallPadding</item>
        <item name="android:backgroundTint">@color/s_light</item>
        <item name="android:gravity">center</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/smallCardCornerRadius</item>
        <item name="icon">@drawable/ic_arrow_back</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/mediumIconSize</item>
        <item name="iconTint">@color/primary_color</item>
    </style>

    <style name="Personal_save_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/largeButtonSize</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/smallCardCornerRadius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_setting_account_password_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_achievement" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_newspaper" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_newspaper_content" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/bodyText1</item>
    </style>

    <style name="Meeting_room_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/header2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Lesson_title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/text_on_s</item>
        <item name="android:textSize">@dimen/header2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Lesson_content" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_on_s</item>
        <item name="android:textSize">@dimen/header3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Lesson_music" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/text_on_s</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="question" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:background">@drawable/personal_radio_button_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/personal_radio_button_text_color</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">normal</item>'
        <item name="android:textAlignment">center</item>
      </style>

    <!-- Theme for dialog-->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <!-- Dialog positive button -->
    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="rippleColor">@color/s_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Dialog negative button -->
    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
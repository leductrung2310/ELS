<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text style -->
    <style name="GreenText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontStyle">italic</item>
    </style>

    <style name="skip_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">#7D73C3</item>
    </style>

    <style name="CustomCardViewStyleTopRadius" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_top_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_top_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="CustomCardViewStyleBottomRadius" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_bottom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_bottom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
    </style>

    <style name="Personal_card_header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Personal_card_body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_card_tab" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Personal_name" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/header3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Activity_name" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_info_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_info_content" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/bodyText2</item>
    </style>

    <style name="Personal_setting_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/header3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_edit_info_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/header3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_edit_info_content" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Personal_edit_info_content_gender" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Personal_edit_info_radio_button" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:background">@drawable/personal_radio_button_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/personal_radio_button_text_color</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">normal</item>'
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/smallPadding</item>
    </style>

    <style name="Personal_back_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:layout_margin">@dimen/smallPadding</item>
        <item name="android:backgroundTint">@color/s_light</item>
        <item name="android:gravity">center</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/smallCardCornerRadius</item>
        <item name="icon">@drawable/ic_arrow_back</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/mediumIconSize</item>
        <item name="iconTint">@color/primary_color</item>
    </style>

    <style name="Personal_save_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/largeButtonSize</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/smallCardCornerRadius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Personal_setting_account_password_title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/bodyText1</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>